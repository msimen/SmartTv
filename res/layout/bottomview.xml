<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <HorizontalScrollView
        android:id="@+id/appsLayout"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:fillViewport="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/appsList"
            android:layout_width="1000dp"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/startfv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Send Data" />

    <Button
        android:id="@+id/startchannel"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="Start Session" />

    <Button
        android:id="@+id/stopchannel"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="Stop Session" />

    <Button
        android:id="@+id/joinchannel"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="Join Session" />

    <Button
        android:id="@+id/sendjson"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="Send Data" />

    <Button
        android:id="@+id/leavechannel"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="Leave Session" />

    <TextView
        android:id="@+id/textpreview"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:hint="message"
        android:padding="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editpreview"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:hint="Add msg to Sync"
        android:padding="0dp" >
    </EditText>

</LinearLayout>